{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": [
    "src/config/index.ts",
    "src/solana/**/*.ts",
    "src/router/**/*.ts",
    "src/vendor/**/*.ts",
    "src/db/**/*.ts",
    "src/exec/**/*.ts",
    "src/telemetry/**/*.ts",
    "src/risk/**/*.ts",
    "src/strategy/**/*.ts",
    "src/collector/**/*.ts",
    "src/ops/**/*.ts",
    "src/main.ts"
  ]
}
